# Example environment variables for Docker deployment
# Copy this file to .env and modify the values as needed

# Application Environment
NODE_ENV=production
PORT=3000

# FHIR Server Configuration
REACT_APP_EHR_SERVER=http://localhost:8080/fhir/r4
REACT_APP_CDS_SERVICE=http://localhost:8090/cds-services

# Public Keys Configuration
REACT_APP_PUBLIC_KEYS=http://localhost:3000/public_keys

# SMART on FHIR Configuration
REACT_APP_CLIENT=your-client-id
REACT_APP_LAUNCH_URL=https://localhost:3005/launch

# CDS Endpoints
REACT_APP_ORDER_SELECT=https://localhost:8090/order-select
REACT_APP_ORDER_SIGN=https://localhost:8090/order-sign

